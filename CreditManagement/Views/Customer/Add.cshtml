@model CreditManagement.Models.AddCustomerViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Thêm mới khách hàng</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="Customer" asp-action="Add" method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ & Tên</label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdentificationNumber" class="form-label">Mã định danh</label>
                            <input asp-for="IdentificationNumber" class="form-control" placeholder="Nhập CCCD/CMND" />
                            <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" type="tel" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Ngày tháng năm sinh</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomerType" class="form-label">Loại khách hàng</label>
                            <select asp-for="CustomerType" class="form-control">
                                <option value="">-- Chọn loại khách hàng --</option>
                                <option value="Individual">Cá nhân</option>
                                <option value="Business">Doanh nghiệp</option>
                                <option value="Corporate">Tập đoàn</option>
                            </select>
                            <span asp-validation-for="CustomerType" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                            <a asp-controller="Customer" asp-action="List" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Trở lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
